<Window x:Class="WpfUI.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI"
        mc:Ignorable="d"
        Title="CreateUserWindow" Height="485" Width="279" FontSize="14" Background="#FF7EEDB3">
    <Grid>
        <Label x:Name="WelcomeLbl" Content="Create New User" HorizontalContentAlignment ="Center" HorizontalAlignment="Center" Height="27" Margin="0,32,0,0" VerticalAlignment="Top" Width="124" FontFamily="Microsoft JhengHei UI" FontWeight="Bold" FontSize="14">
            <Label.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="5"/>
            </Label.Effect>
        </Label>
        <TextBox x:Name="CreateEmailBox" VerticalContentAlignment="Center"  Height="39" Margin="100,84,45,0" TextWrapping="Wrap" Background="#FF79DEA9" VerticalAlignment="Top" FontFamily="Cascadia Code" FontSize="13" BorderBrush="#FFB1B1B1"/>
        <TextBox x:Name="CreateFirstNameBox" VerticalContentAlignment="Center"  Height="39" Margin="100,134,45,0" TextWrapping="Wrap" Background="#FF79DEA9" VerticalAlignment="Top" FontFamily="Cascadia Code" FontSize="13" BorderBrush="#FFB1B1B1"/>
        <PasswordBox x:Name="CreatePassBox" VerticalContentAlignment="Center"  Height="40" Margin="100,235,45,0"  Background="#FF79DEA9"  VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="13" BorderBrush="#FFB1B1B1"/>
        <PasswordBox x:Name="ConfirmCreatePassBox" VerticalContentAlignment="Center"  Height="39" Margin="100,285,45,0"  Background="#FF79DEA9"  VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="13" BorderBrush="#FFB1B1B1"/>
        <Button x:Name="CreateUserButton" Content="Create User" HorizontalAlignment="Center" Height="28" Margin="0,356,0,0" VerticalAlignment="Top" Width="124" Click="Create_Button_Click"/>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Center" Height="28" Margin="0,400,0,0" VerticalAlignment="Top" Width="76" Click="Back_Button_Click"/>
        <Label Content="Email:" HorizontalAlignment="Left" Height="30" Margin="38,88,0,0" VerticalAlignment="Top" Width="62"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="30" Margin="21,240,0,0" VerticalAlignment="Top" Width="74"/>
        <Label Content="Confirm :" HorizontalAlignment="Left" Height="60" Margin="24,284,0,0" VerticalAlignment="Top" Width="68"/>
        <TextBox x:Name="CreateLastNameBox" VerticalContentAlignment="Center"  Height="39" Margin="100,186,45,0" TextWrapping="Wrap" Background="#FF79DEA9" VerticalAlignment="Top" FontFamily="Cascadia Code" FontSize="13" BorderBrush="#FFB1B1B1"/>
        <Label Content="First Name:" HorizontalAlignment="Left" Height="30" Margin="10,138,0,0" VerticalAlignment="Top" Width="85"/>
        <Label Content="Last Name:" HorizontalAlignment="Left" Height="30" Margin="10,190,0,0" VerticalAlignment="Top" Width="85"/>
    </Grid>
</Window>
